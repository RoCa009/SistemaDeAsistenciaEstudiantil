        outline: none;
    }

        .txtAdmin::placeholder {
            color: #0094B3;
        }

    .sltakeAsistity {
        background-color: #fef8f3;
        border: 1px solid #f28637;
        border-radius: 35px;
        height: 30px;
        color: #f28637;
        outline: none;
    }

    .txtTakeAsistity {
        background-color: #fef8f3;
        border: 1px solid #f28637;
        border-radius: 35px;
        width: 70%;
        height: 30px;
        color: #f28637;
        outline: none;
    }

        .txtTakeAsistity::placeholder {
            color: #f28637;
        }

