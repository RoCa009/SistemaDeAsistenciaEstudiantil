
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Listado De Tomas De Asistencia</h2>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#miModal">
    Tomar Asistencia
</button>
<br /><br />

<table id="tomadeasistencias" class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Fecha</td>
            <td>IdProfesor</td>
            <td>IdAlumno</td>
            <td>IdGrado</td>
            <td>IdSeccion</td>
            <td>Asistencia</td>
            <td>Llego Tarde</td>
            <td>Justificacón De Llegada Tarde</td>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!----------------- Ventana Modal ------------------------------------->
<div class="modal fade" id="miModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Toma De Asistencia</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="Limpiar()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmHorarios">
                    <input type="hidden" id="Id" name="Id" />

                    <div class="form-group">
                        <label>Fecha</label>
                        <input type="date" id="Fecha" name="Fecha" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdProfesor</label>
                        <input type="number" id="IdProfesor" name="IdProfesor" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdAlumno</label>
                        <input type="number" id="IdAlumno" name="IdAlumno" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdGrado</label>
                        <input type="number" id="IdGrado" name="IdGrado" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdSeccion</label>
                        <input type="number" id="IdSeccion" name="IdSeccion" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Asistencia</label>
                        <input type="text" id="Asistencia" name="Asistencia" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>LlegoTarde</label>
                        <input type="text" id="LlegoTarde" name="LlegoTarde" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>JustificacionLlegadaTarde</label>
                        <input type="text" id="JustificacionLlegadaTarde" name="JustificacionLlegadaTarde" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" name="btnAgregar" value="Agregar" class="btn btn-primary" />
                    </div>

                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Limpiar()">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- Fin de la ventana Modal -->

<script src="~/Scripts/HorariosAjax.js"></script>