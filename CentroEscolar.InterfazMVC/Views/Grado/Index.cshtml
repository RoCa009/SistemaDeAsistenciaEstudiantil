
@{
    ViewBag.Title = "Administración";

    ViewBag.Section = "Administración > Grados";
    ViewBag.SectionLink = "../GradosSeccionesMenu/Index";
    ViewBag.MenuLevel = "> Grados";
}

<h2>Listado de Grados</h2>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#miModal">
    Nuevo Grado
</button>
<br />
<br />

<table id="grados" class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>GradoAsignado</td>
            <td>IdProfesor</td>
            <td>IdSeccion</td>
            <td>IdHorario</td>
            <td>IdAula</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!----------------- Ventana Modal ------------------------------------->
<div class="modal fade" id="miModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Grados</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="Limpiar()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmGrados">
                    <input type="hidden" id="Id" name="Id" />

                    <div class="form-group">
                        <label>GradoAsignado</label>
                        <input type="text" id="GradoAsignado" name="GradoAsignado" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Profesor</label>
                        <select id="IdProfesor" name="IdProfesor" class="form-control">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Sección</label>
                        <select id="IdSeccion" name="IdSeccion" class="form-control">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Horario</label>
                        <select id="IdHorario" name="IdHorario" class="form-control">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Aula</label>
                        <select id="IdAula" name="IdAula" class="form-control">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" id="btnGuardar" value="Guardar" class="btn btn-primary" />
                    </div>


                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Limpiar()">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- Fin de la ventana Modal -->

<script src="~/Scripts/GradoAjax.js"></script>

