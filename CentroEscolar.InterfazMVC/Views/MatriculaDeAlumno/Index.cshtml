
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Listado De Matriculas De Alumnos</h2>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#miModal">
    Matricular Alumno
</button>
<br /><br />

<table id="matriculadealumnos" class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>DUI Encargado</td>
            <td>Nombre Encargado</td>
            <td>Nombres Alumno</td>
            <td>Apellidos Alumno</td>
            <td>Edad</td>
            <td>Sexo</td>
            <td>Direccion</td>
            <td>Telefono</td>
            <td>Correo</td>
            <td>IdProfesor</td>
            <td>IdGrado</td>
            <td>IdSeccion</td>
            <td>IdHorario</td>
            <td>IdAula</td>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!----------------- Ventana Modal ------------------------------------->
<div class="modal fade" id="miModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Matricula De Alumno</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="Limpiar()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">



                <form id="frmHorarios">
                    <input type="hidden" id="Id" name="Id" />

                    <div class="form-group">
                        <label>DUIEncargado</label>
                        <input type="text" id="DUIEncargado" name="DUIEncargado" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>NombreEncargado</label>
                        <input type="text" id="NombreEncargado" name="NombreEncargado" class="form-control" />
                    </div>

                    <td>Nombres Alumno</td>
                    <td>Apellidos Alumno</td>
                    <td>Edad</td>
                    <td>Sexo</td>
                    <td>Direccion</td>
                    <td>Telefono</td>
                    <td>Correo</td>

                    <div class="form-group">
                        <label>NombresAlumno</label>
                        <input type="text" id="NombresAlumno" name="NombresAlumno" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Edad</label>
                        <input type="text" id="Edad" name="Edad" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>ApellidosAlumno</label>
                        <input type="text" id="ApellidosAlumno" name="ApellidosAlumno" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdProfesor</label>
                        <input type="number" id="IdProfesor" name="IdProfesor" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdGrado</label>
                        <input type="number" id="IdGrado" name="IdGrado" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdSeccion</label>
                        <input type="number" id="IdSeccion" name="IdSeccion" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdHorario</label>
                        <input type="number" id="IdHorario" name="IdHorario" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>IdAula</label>
                        <input type="number" id="IdAula" name="IdAula" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" name="btnAgregar" value="Agregar" class="btn btn-primary" />
                    </div>


                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Limpiar()">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- Fin de la ventana Modal -->

<script src="~/Scripts/HorariosAjax.js"></script>

