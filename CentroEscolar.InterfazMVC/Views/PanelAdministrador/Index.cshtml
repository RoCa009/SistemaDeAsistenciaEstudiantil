        -moz-box-shadow: 3px 3px 10px 0px rgba(165, 165, 165, 0.78);
        -o-box-shadow: 3px 3px 10px 0px rgba(165, 165, 165, 0.78);
        -ms-box-shadow: 3px 3px 10px 0px rgba(165, 165, 165, 0.78);
    }

    .BackgroundImgAdmin {
        display: block;
        width: 100%;
        height: 50%;
        border-radius: 10px;
    }

    .PerfilImgAdmin {
        position: absolute;
        background-color: #fff;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: 10px auto;
        z-index: 2;
        width: 40%;
        border-radius: 100%;
        border: 5px solid #0094B3;
    }

    .InformationTeam {
